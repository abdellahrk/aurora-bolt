{% form_theme form _self %}

<div class="row">
    {% block form_widget_simple %}
        <div class="col-xl-6">
            <div class="comment-form__input-box">
                <input type="text"  name="name">
            </div>
        </div>
    {% endblock %}

    {% block email_widget %}
        <div class="col-xl-6">
            <div class="comment-form__input-box">
                <input type="email" name="email">
            </div>
        </div>
    {% endblock %}

    {% block datetime_widget %}
        <div class="col-xl-6">
            <div class="comment-form__input-box">
                <input type="date" name="email">
            </div>
        </div>
    {% endblock %}
</div>

<div class="row">
    <div class="col-xl-12">
        {% block textarea_widget %}
            <div class="comment-form__input-box">
                <textarea name="message" ></textarea>
            </div>
        {% endblock %}
        {% block button_widget %}
            <button type="submit" class="thm-btn faqs-contact__btn"><span></span></button>
        {% endblock %}
    </div>
</div>

