<header class="main-header clearfix">
{% set locale = app.request.locale %}
    <nav class="main-menu clearfix">
        <div class="main-menu-wrapper">
            <div class="main-menu-wrapper__logo">
                <a href="{{ path('homepage') }}"><img src="{{ asset('images/resources/logo.png') }}" alt=""></a>
            </div>
            <div class="main-menu-wrapper__main-menu">
                <a href="#" class="mobile-nav__toggler"><i class="fa fa-bars"></i></a>
                {{ menu('main', template='helpers/_menu.twig') }}
            </div>
            <div class="main-menu-wrapper__right">
                <div class="main-menu-wrapper__call">
                    <div class="main-menu-wrapper__call-icon">
                        <img src="assets/images/icon/phone-icon.png" alt="">
                    </div>
                    <div class="main-menu-wrapper__call-number">
                        <p>Appelez nous</p>
                        <h5><a href="tel:{{ general.contact.phone ?? '#' }}">{{ general.contact.phone ?? '' }}</a></h5>
                    </div>
                </div>
                <div class="main-menu-wrapper__search-box">
                    <a href="#" class="main-menu-wrapper__search search-toggler icon-magnifying-glass"></a>
                </div>
            </div>
        </div>
    </nav>
</header>

<div class="stricky-header stricked-menu main-menu">
    <div class="sticky-header__content"></div><!-- /.sticky-header__content -->
</div><!-- /.stricky-header -->
