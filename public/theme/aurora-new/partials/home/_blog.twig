{% setcontent blog = 'blog' limit 3 random %}
<!--Blog One Start-->
<section class="blog-one">
    <div class="container">
        <div class="section-title text-center">
            <span class="section-title__tagline">Lirez quelques articles</span>
            <h2 class="section-title__title">Blog</h2>
        </div>
        <div class="row">
            {% for article in blog %}
                <div class="col-xl-4 col-lg-4 wow fadeInUp" data-wow-delay="200ms">
                    <!--Blog One Single-->

                    <div class="blog-one__single">
                        <div class="blog-one__img">
                            <img src="{{ article.image }}" alt="{{ article.title }}">
                            <a href="{{ article|link }}">
                                <span class="blog-one__plus"></span>
                            </a>
                            <div class="blog-one__date">
                                <p>{{ article.createdAt|date('d M Y') }}</p>
                            </div>
                        </div>
                        <div class="blog-content">
                            <ul class="list-unstyled blog-one__meta">
                                <li><a href="#"><i class="far fa-user-circle"></i> {{ article.author }}</a></li>
                                {#
                                <li><span>/</span></li>
                                <li><a href="blog-details.html"><i class="far fa-comments"></i> 2 Comments</a>
                                </li>
                                #}
                            </ul>
                            <h3 class="blog-one__title">
                                <a href="{{ article|link }}">{{ article.title }}</a>
                            </h3>
                            <div class="blog-one__read-btn">
                                <a href="{{ article|link }}">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<!--Blog One End-->
