    <!--We Make Start-->
    {% include 'partials/index/we-make.twig' %}
    <!--We Make End-->

    <!--Services One Start-->
    {% include 'partials/index/services.twig' %}
    <!--Services One End-->

    {% include 'partials/_portfolio.twig' %}

    <!--Testimonial One Start-->
    {#% include 'partials/index/testimonials.twig' %#}
