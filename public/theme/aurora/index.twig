{% extends 'partials/_master.twig' %}
{% setcontent services = 'services' limit 3 %}
{% setcontent others = 'others' %}

{% block main %}
    {% include 'partials/_banner.twig' %}

    <!--Welcome One Start-->
    <section class="welcome-one">
        <div class="container">
            <div class="row">
                <div class="col-xl-6">
                    <div class="welcome-one__left wow fadeInLeft" data-wow-duration="1500ms">
                        <div class="welcome-one__img-box">
                            <div class="welcome-one__img">
                                <img src="{{ record.image|thumbnail(531, 531) }}" alt="">
                                <div class="welcome-one__shape-1"></div>
                                <div class="welcome-one__shape-2"></div>
                            </div>
                            <div class="welcome-one__trusted">
                                <p>Trusted by</p>
                                <h2 class="odometer" data-count="4890">00</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="welcome-one__right">
                        <div class="section-title text-left">
                            <span class="section-title__tagline">{{ record.small_title }}</span>
                            <h2 class="section-title__title">{{ record.title }}</h2>
                        </div>
                        <div class="welcome-one__solutions">
                            <div class="welcome-one__solutions-single">
                                <div class="welcome-one__solutions-icon">
                                    <span class="icon-tick"></span>
                                </div>
                                <div class="welcome-one__solutions-text-box">
                                    <p>{{ record.cta1 }}</p>
                                </div>
                            </div>
                            <div class="welcome-one__solutions-single">
                                <div class="welcome-one__solutions-icon">
                                    <span class="icon-tick"></span>
                                </div>
                                <div class="welcome-one__solutions-text-box">
                                    <p>{{ record.cta2 }}</p>
                                </div>
                            </div>
                        </div>
                        <p class="welcome-one__right-text-1">{{ record.introduction }}</p>
                        <p class="welcome-one__right-text-2">{{ record.content }}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Welcome One End-->

    <!--Counter One Start-->
    {% include('partials/_counter.twig') %}
    <!--Counter One End-->

    <!--We Change Start-->
    {% include 'partials/_faq.twig' %}
