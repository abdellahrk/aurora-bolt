                        </ul>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay="400ms">
                    <div class="footer-widget__column footer-widget__contact">
                        <h3 class="footer-widget__title">Contact</h3>
                        <p class="footer-widget__contact-text"> Douala - Buea, Cameroun</p>
                        <div class="footer-widget__contact-info">
                            <p>
                                <a href="tel:{{ settings.phone ? settings.phone : '' }}" class="footer-widget__contact-phone">
                                    {{ settings.phone ? settings.phone : '' }}</a>
                                <a href="mailto:{{ config.get('theme/address/email') }}"
                                   class="footer-widget__contact-mail">{{ config.get('theme/address/email') }}</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay="400ms">
                    <div class="footer-widget__column footer-widget__newsletter">
                        <h3 class="footer-widget__title">Sign up for newsletter</h3>
                        <form class="footer-widget__newsletter-form">
                            <div class="footer-widget__newsletter-input-box">
                                <input type="email" placeholder="Email Address" name="email">
                                <button type="submit" class="footer-widget__newsletter-btn"><i
                                        class="fas fa-paper-plane"></i></button>
                            </div>
                        </form>
                        <div class="footer-widget__newsletter-bottom">
                            <div class="footer-widget__newsletter-bottom-icon">
                                <i class="fa fa-check"></i>
                            </div>
                            <div class="footer-widget__newsletter-bottom-text">
                                <p>I agree to all terms and policies</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="site-footer-bottom__inner">
                        <p class="site-footer-bottom__copy-right">Â© Copyright {{ "now"|date('Y')}} by <a
                                href="https://aurora.cm">{{ config.get('general/sitename') }}</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
<!--Site Footer One End-->


