                            <a href="{{ path('homepage') }}"><img src="{{ asset('images/resources/footer-logo.png') }}" alt=""></a>
                        </div>
                        <p class="footer-widget__about-text">{{ settings.footer_text ? settings.footer_text : '' }}</p>
                        <div class="footer-widget__about-social-list">
                            <a href="#" target="_blank"><i class="fab fa-twitter"></i></a>
                            <a href="{{ settings.facebook ? settings.facebook : '' }}" target="_blank" class="clr-fb"><i class="fab fa-facebook"></i></a>
                            <a href="#" class="clr-dri" target="_blank"><i class="fab fa-pinterest-p"></i></a>
                            <a href="#" class="clr-ins" target="_blank"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-xl-2 col-lg-6 col-md-6 wow fadeInUp" data-wow-delay="200ms">
                    <div class="footer-widget__column footer-widget__explore clearfix">
                        <h3 class="footer-widget__title">Explore</h3>
                        <ul class="footer-widget__explore-list list-unstyled">
                            <li><a href="/aurora/apropos">Apropos</a></li>
                            {#
                            <li><a href="team.html">Meet our team</a></li>
                            <li><a href="#">Case stories</a></li>
                            <li><a href="blog.html">Latest news</a></li>
                            #}
