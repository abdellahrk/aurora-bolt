{% setcontent cta = 'cta' %}

<div class="col-xl-4 col-lg-5">
    <div class="service-details__sidebar">
        <div class="service-details__sidebar-category">
            <h3 class="service-details__sidebar-title">Services</h3>
            <ul class="service-details__sidebar-category-list list-unstyled">
                {% for service in services %}
                    <li><a href="{{ service|link }}">{{ service.title }} <span
                                class="fa fa-angle-right"></span></a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="service-details__need-help">
            <div class="service-details__need-help-bg"
                 style="background-image: url(assets/images/resources/ser-dtl-need-help-bg.jpg)">
            </div>
            <h3 class="service-details__need-help-title">{{ cta.title ? cta.title : '' }}</h3>
            <p class="service-details__need-help-text">
                {{ cta.body ? cta.body : ''}}
            </p>
            <div class="service-details__need-help-phone">
                <div class="service-details__need-help-phone-icon">
                    <span class="icon-phone-call"></span>
                </div>
                <div class="service-details__need-help-phone-number">
                    <h4><a href="tel:{{ config.get('theme/address/phone') }}">{{ config.get('theme/address/phone') }}</a></h4>
                </div>
            </div>
        </div>
    </div>
</div>
