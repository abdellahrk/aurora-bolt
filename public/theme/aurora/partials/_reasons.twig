{% setcontent whyus = 'whyus' limit 1 returnsingle %}
{% if whyus is not empty %}
<section class="reasons-one">
    <div class="container">
        <div class="row">
            <div class="col-xl-4">
                <div class="reasons-one__left">
                    <div class="section-title text-left">
                        <span class="section-title__tagline">{{ whyus.small_title ? whyus.small_title : '' }}</span>
                        <h2 class="section-title__title">{{ whyus.title ? whyus.title : '' }}</h2>
                    </div>
                    <ul class="list-unstyled reasons-one__icon-box">
                        <li>
                            <span class="icon-training"></span>
                            <p class="reasons-one__text">{{ whyus.first_reason ? whyus.first_reason : '' }}</p>
                        </li>
                        <li>
                            <span class="icon-strategy"></span>
                            <p class="reasons-one__text">{{ whyus.second_reason ? whyus.second_reason : '' }}</p>
                        </li>
                    </ul>
                    <p class="reasons-one__text-1">{{ whyus.body }}</p>
                    <a href="{{ whyus.link_to_about }}" class="thm-btn"><span>{{ whyus.link_title }}</span></a><!-- /.thm-btn -->
                </div>
            </div>
            <div class="col-xl-8">
                <div class="reasons-one__img-box">
                    <div class="reasons-one-img-box-bg"></div>
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6">
                            <div class="reasons-one__img-one">
                                <img src="{{ whyus.image_400x609 ? whyus.image_400x609|thumbnail(400, 609): '' }}" alt="{{ config.get('general/sitename') }}">
                                <div class="reasons-one__shape-1"></div>
                                <div class="reasons-one__shape-2"></div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6">
                            <div class="reasons-one__img-two">
                                <img src="{{ whyus.image_400x349 ? whyus.image_400x349|thumbnail(400, 349) : '' }}" alt="{{ config.get('general/sitename') }}">
                            </div>
                            <div class="reasons-one__img-three reasons-one__img-two">
                                <img src="{{ whyus.image_400x230 ? whyus.image_400x230|thumbnail(400, 230) : '' }}" alt="{{ config.get('general/sitename') }}">
                                <div class="reasons-one__shape-3"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}
