{% setcontent ads = 'ads' %}

{% if ads is not empty %}
<div class="service-details__sidebar mt-4">
    <div class="swiper-container thm-swiper__slider" data-swiper-options='{"slidesPerView": 1, "loop": true,
                "effect": "fade",
                 "pagination": {
                    "el": "#main-slider-pagination",
                    "type": "bullets",
                    "clickable": true
                  },
                "navigation": {
                    "nextEl": "#main-slider__swiper-button-next",
                    "prevEl": "#main-slider__swiper-button-prev"
                },
                "autoplay": {
                    "delay": 5000
                }}'>
        <div class="swiper-wrapper">
            {% for ad in ads %}
                <a href="{{ ad.link ?? '#' }}" target="_blank" >
                    <div class="swiper-slide"  style="background-image: url({{ ad.image }})">
                        <div class="service-details__need-help-bg"
                             style="background-image: url({{ ad.image }})">
                        </div>
                        <div class="image-layer-overlay"></div>
                        <div class="main-slider-shape-1"></div>
                        <div class="main-slider-shape-2"></div>
                        <div class="main-slider-shape-3"></div>
                        <div class="main-slider-shape-4"></div>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="main-slider__content p-4">
                                        <h3 class="service-details__need-help-title">{{ ad.title }} </h3>
                                        <p class="service-details__need-help-text text-white">{{ ad.description }}</p>
                                        <div class="service-details__need-help-phone">
                                            <div class="service-details__need-help-phone-icon">
                                                <span class="icon-phone-call"></span>
                                            </div>

                                            <div class="service-details__need-help-phone-number">
                                                <h4><a href="#"></a></h4>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
        <!-- If we need navigation buttons -->
        <div class="slider-bottom-box clearfix mt-2">

            <div class="main-slider__nav">
                <div class="swiper-button-prev" id="main-slider__swiper-button-next"><i
                        class="icon-right-arrow icon-left-arrow"></i>
                </div>
                <div class="swiper-button-next" id="main-slider__swiper-button-prev"><i
                        class="icon-right-arrow"></i>
                </div>
            </div>
            <div class="swiper-pagination" id="main-slider-pagination"></div>
        </div>
    </div>
</div>
{% endif %}
