
<section class="services-one">
    <div class="services-one-bg" style="background-image: url({{ homepage.service_background|thumbnail(1984, 824) }})">
    </div>
    <div class="container">
        <div class="section-title text-center">
            <span class="section-title__tagline">{{ homepage.service_tagline }}</span>
            <h2 class="section-title__title">{{ homepage.service_title }}</h2>
        </div>
        <div class="row">
            {% for service in services %}
                <div class="col-xl-4 col-lg-4">
                    <!--Services One Single-->
                    <div class="services-one__single wow fadeInUp" data-wow-delay="100ms">
                        <div class="services-one__icon">
                            <span class="{{ service.iconImage }}"></span>
                        </div>
                        <h3 class="services-one__title"><a href="{{ service|link }}">{{ service.title }}</a></h3>
                        <p class="services-one__text">{{ service.excerpt }} </p>
                        <a href="{{ service|link }}" class="service-one__arrow"><span
                                class="icon-right-arrow"></span></a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
