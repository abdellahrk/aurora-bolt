    <section class="blog-details">
        <div class="container">
            <div class="row">
                <div class="col-xl-8 col-lg-7">
                    <div class="blgo-details__left">
                        <div class="blog-details__img">
                            <img src="{{ blog.image|thumbnail(770,444) }}" alt="{{ blog.title }}">
                            <div class="blog-details__date-box">
                                <p><span>{{ blog.createdAt|date('d') }}</span> {{ blog.createdAt|date('M') }}<span>{{ blog.createdAt|date('Y') }}</span></p>
                            </div>
                        </div>
                        <div class="blog-details__content">
                            <ul class="list-unstyled blog-details__meta">
                                <li><a href="#"><i class="far fa-user-circle"></i> {{ blog.author }}</a></li>
                                {#<li><a href="blog-details.html"><i class="far fa-comments"></i> 2 Comments</a>#}
                                </li>
                            </ul>
                            <h1 class="blog-details__title">{{ blog.title|ucwords }}</h1>
                            <p class="blog-details__text-1">{{ blog.text|raw }}</p>
                        </div>
                        <div class="blog-details__bottom">
                            <p class="blog-details__tags">
                                {#
                                <span>Tags:</span>
                                <a href="#">Agency</a>
                                <a href="#">Design</a>
                                #}
                            </p>
                            <div class="blog-details__social-list">
                                <span>Share:</span>
                                <a href="https://twitter.com/share?url={{ app.request.uri }}&text={{ blog.title }}&via=auroracm_&hashtags=auroracm"><i class="fab fa-twitter"></i></a>
                                <a href="https://www.facebook.com/sharer.php?u={{ app.request.uri }}" target="_blank" class="clr-fb"><i class="fab fa-facebook"></i></a>
                                <a href="https://pinterest.com/pin/create/bookmarklet/?media=[post-img]&url={{ app.request.uri }}&is_video=[is_video]&description={{ blog.title }}" target="_blank" class="clr-dri"><i class="fab fa-pinterest-p"></i></a>
                                <a href="https://api.whatsapp.com/send?text={{ blog.title }} {{ app.request.uri}}" target="_blank" class="clr-ins"><i class="fab fa-whatsapp"></i></a>
                                <a href="https://t.me/share/url?url={{ app.request.uri }}&text={{ blog.title }}" target="_blank" class="clr-ins"><i class="fab fa-telegram"></i></a>
                            </div>
                        </div>
                        <div class="blgo-details__pagenation-box">
                            <ul class="list-unstyled blog-details__pagenation">
                                {% for article in articles %}
                                    {% if loop.index < 3 %}
                                    <li><a href="{{ article|link }}">{{ article.title|excerpt(50) }}</a>
